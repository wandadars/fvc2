! Standard nondimensional Sod shock tube (gamma = 1.4, R = 1).
! Left state:  rho = 1.0, p = 1.0, u = 0.0, v = 0.0
! Right state: rho = 0.125, p = 0.1, u = 0.0, v = 0.0
time_step: 2e-5
output_interval: 1000
max_steps: 10000
gamma: 1.4
molar_mass: 8.3144598   ! gives R = 1.0 with rideal in the solver
diffusion_coeff: 1e-4
time_discretization: 1   ! 1=fwd euler, 2=rk4
convective_scheme: 1     ! 0=off, 1=ausm+, 2=roe

boundary_conditions:<
inlet=wall()
outlet=wall()
walls=wall()
>

initial_condition_type: shock_tube
shock_split_x: 0.5
shock_left_state: 1.0 1.0 0.0 0.0
shock_right_state: 0.125 0.1 0.0 0.0

output_format_mode: vtk   ! tecplot | vtk | both, or 0/1/2
animate_output: on